<div class="page-header">
	<h1>{{user.name}} <small>{{user.score}}</small></h1>
</div>
<div id="dataHolder" data-values="{{values}}"></div>
<div class="jumbotron">
	<div class="row">
		<div class="col-xs-5 col-xs-offset-1">
			hello
		</div>
		<div class="col-xs-5 chart-container">
			<canvas id="myChart"></canvas>
		</div>
	</div>
</div>
<script type="text/javascript">
	var ctx = document.getElementById("myChart");
	var dataHolder = document.getElementById("dataHolder");
	var values = dataHolder.getAttribute('data-values').split(",");
	var randomColor = 'rgba(' + getRandomColorInt() + ',' + getRandomColorInt() + ',' + getRandomColorInt() + ',0.2)';

	var myChart = new Chart(ctx, {
		type: 'radar',
		data: {
			labels: ["forward speed", "leftward speed", "backward speed", "rightward speed", "left spit"],
			datasets: [{
				backgroundColor: randomColor,
				data: values
			}]
		},
		options: {
			legend: {
				display: false
			}
		}
	});

	function getRandomColorInt() {
		return Math.floor(Math.random() * 256);
	}
</script>